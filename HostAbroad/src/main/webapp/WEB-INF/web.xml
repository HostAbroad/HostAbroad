<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>HostAbroad</display-name>
  <servlet>
    <servlet-name>homepage</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
    <init-param>
      <param-name>UI</param-name>
      <param-value>com.presentation.loginUI.HomePage</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>homepage</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <display-name>SearchUI</display-name>
  <servlet>
    <servlet-name>SearchUI</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
    <init-param>
      <param-name>UI</param-name>
      <param-value>com.presentation.searchUI.SearchUI</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>SearchUI</servlet-name>
    <url-pattern>/search/*</url-pattern>
  </servlet-mapping>


</web-app>